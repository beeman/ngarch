{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@core/*": ["app/core/*"],
      "@config/*": ["app/config/*"],
      "@shared/*": ["app/shared/*"],
      "@util/*": ["app/util/*"],
      "@ponent-mokuai/*": ["app/ponent-mokuai/*"],
      "@features/*": ["app/features/*"]
    }
  }
}
